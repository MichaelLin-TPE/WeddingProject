<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".service.confirm_amount.input.InputAmountFragment">

        <ImageView
            android:id="@+id/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/confirm_amount_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/need_cake"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="150dp"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:text="要發喜餅"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/center_view"
            android:layout_marginTop="50sp"
            android:background="@drawable/confirm_amount_bg2"
            app:layout_constraintTop_toBottomOf="@id/need_cake"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="715dp"
            android:layout_height="690dp">

            <TextView
                android:id="@+id/name"
                android:textSize="60sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Michael"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/amount"
                android:textSize="60sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="禮金"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="50dp"
                android:layout_marginTop="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edit_amount"
                android:layout_marginHorizontal="50sp"
                app:layout_constraintTop_toTopOf="@id/amount"
                app:layout_constraintLeft_toRightOf="@id/amount"
                app:layout_constraintBottom_toBottomOf="@id/amount"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/edit_amount_bg"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="60sp"
                android:text="2000"
                android:paddingHorizontal="20dp"
                android:layout_width="0dp"
                android:layout_height="136dp"/>


            <TextView
                android:id="@+id/cake_count"
                android:textSize="60sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="喜餅已給數量"
                app:layout_constraintTop_toBottomOf="@id/amount"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="50dp"
                android:layout_marginTop="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/edit_cake_amount"
                android:layout_marginHorizontal="50sp"
                app:layout_constraintTop_toTopOf="@id/cake_count"
                app:layout_constraintLeft_toRightOf="@id/cake_count"
                app:layout_constraintBottom_toBottomOf="@id/cake_count"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/edit_amount_bg"
                android:inputType="number"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="60sp"
                android:text="10"
                android:paddingHorizontal="20dp"
                android:layout_width="0dp"
                android:layout_height="136dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:id="@+id/send"
            app:layout_constraintTop_toTopOf="@id/center_view"
            app:layout_constraintRight_toRightOf="@id/center_view"
            android:layout_marginTop="600dp"
            android:background="@drawable/confirm_amount_button_bg"
            android:text="送出"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_width="185dp"
            android:layout_height="179dp"/>


        <ImageView
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@id/send"
            android:src="@drawable/smell_icon"
            app:layout_constraintLeft_toLeftOf="@id/send"
            app:layout_constraintRight_toLeftOf="@id/send"
            android:layout_width="84dp"
            android:layout_height="84dp"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo2"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="220dp"
            android:layout_marginBottom="30dp"
            android:text="禮金組"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
