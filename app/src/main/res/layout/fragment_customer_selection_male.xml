<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".CustomerSelectionFemaleFragment">

        <ImageView
            android:id="@+id/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/back"
            android:layout_width="30dp"
            android:layout_height="30dp"/>



        <ImageView
            android:id="@+id/bg"
            android:src="@drawable/customer_selection_bg"
            app:layout_constraintBottom_toTopOf="@id/logo"
            app:layout_constraintTop_toBottomOf="@id/back"
            android:layout_width="match_parent"
            android:layout_marginTop="120dp"
            android:layout_height="0dp"/>



        <ImageView
            android:id="@+id/bg3"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="150dp"
            android:src="@drawable/male_selection_bg2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/bg" />

        <ImageView
            android:id="@+id/bg5"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginTop="240dp"
            android:scaleType="fitXY"
            android:src="@drawable/male_selection_bg4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/bg" />


        <ImageView
            android:id="@+id/bg2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/male_selection_bg1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/bg" />

        <ImageView
            android:id="@+id/bg4"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="170dp"
            android:src="@drawable/male_selection_bg3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/bg" />

        <ImageView
            android:id="@+id/bg6"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="240dp"
            android:scaleType="fitXY"
            android:src="@drawable/male_selection_bg5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/bg" />

        <ImageView
            android:id="@+id/bg7"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/male_selection_bg6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/bg6" />

        <TextView
            android:id="@+id/college_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大學\n朋友"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:padding="50dp"
            app:layout_constraintBottom_toBottomOf="@id/bg2"
            app:layout_constraintLeft_toLeftOf="@id/bg2"
            app:layout_constraintRight_toRightOf="@id/bg2"
            app:layout_constraintTop_toTopOf="@id/bg2" />

        <TextView
            android:id="@+id/lineage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天堂"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:padding="50dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintBottom_toBottomOf="@id/bg3"
            app:layout_constraintLeft_toLeftOf="@id/bg3"
            app:layout_constraintRight_toRightOf="@id/bg3"
            app:layout_constraintTop_toTopOf="@id/bg3" />


        <TextView
            android:id="@+id/family"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="親戚"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:padding="50dp"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="@id/bg4"
            app:layout_constraintLeft_toLeftOf="@id/bg4"
            app:layout_constraintRight_toRightOf="@id/bg4"
            app:layout_constraintTop_toTopOf="@id/bg4" />


        <TextView
            android:id="@+id/high_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="國中\n朋友"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:padding="50dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@id/bg5"
            app:layout_constraintLeft_toLeftOf="@id/lineage"
            app:layout_constraintRight_toRightOf="@id/lineage"
            app:layout_constraintTop_toTopOf="@id/bg5" />

        <TextView
            android:id="@+id/hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="儷夏"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:padding="50dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@id/bg5"
            app:layout_constraintLeft_toLeftOf="@id/family"
            app:layout_constraintRight_toRightOf="@id/family"
            app:layout_constraintTop_toTopOf="@id/bg5" />

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同事"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:padding="50dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@id/bg7"
            app:layout_constraintLeft_toLeftOf="@id/bg7"
            app:layout_constraintRight_toRightOf="@id/bg7"
            app:layout_constraintTop_toTopOf="@id/bg7" />



        <ImageView
            android:id="@+id/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/logo2"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>


        <TextView
            android:text="貴賓區&lt;男方"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="15dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginEnd="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
