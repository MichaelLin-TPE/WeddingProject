<?xml version="1.0" encoding="utf-8"?>

<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8E5D4"
        tools:context=".MainActivity">



        <ImageView
            android:id="@+id/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/home_logo"
            android:layout_width="match_parent"
            android:paddingHorizontal="20dp"
            android:layout_height="150dp"/>



        <TextView
            android:id="@+id/management"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:text="管理區"
            android:textSize="25sp"
            android:background="@drawable/pink_circle"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:layout_width="230dp"
            android:layout_height="230dp"/>


        <TextView
            android:id="@+id/sit"
            app:layout_constraintLeft_toLeftOf="@id/service"
            app:layout_constraintTop_toTopOf="@id/customer"
            android:text="貴賓區"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/coffee_circle"
            android:layout_marginTop="80dp"
            android:layout_width="230dp"
            android:layout_height="230dp"/>

        <TextView
            android:id="@+id/service"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="座位區"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="160dp"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:background="@drawable/blue_circle"
            android:layout_width="230dp"
            android:layout_height="230dp"/>



        <TextView
            android:id="@+id/customer"
            app:layout_constraintLeft_toLeftOf="@id/management"
            app:layout_constraintTop_toTopOf="parent"
            android:text="顧客區"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/pirpule_circle"
            android:textColor="@color/black"

            android:layout_marginTop="280dp"
            android:layout_width="230dp"
            android:layout_height="230dp"/>






    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>

