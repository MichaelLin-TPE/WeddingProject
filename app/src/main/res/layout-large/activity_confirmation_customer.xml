<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CFD6CD"
        tools:context=".confirmation_customer.ConfirmationCustomerActivity">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/photo_view"
            android:layout_width="325dp"
            android:layout_height="230dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/dialog_confirm_name_selection_shape_small"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@id/content_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/photo" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_view"
            android:layout_width="325dp"
            android:layout_height="230dp"
            android:background="@drawable/dialog_confirm_name_selection_shape_small"
            app:layout_constraintBottom_toTopOf="@id/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photo_view">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:gravity="center"
                android:text="謝謝你來 :)\n名字已送出, 請停留在此畫面, 勿關閉app"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="25dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="KS"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line" />

            <TextView
                android:id="@+id/sit_title"
                android:textSize="30sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10dp"
                android:text="座位:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/sit"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="男方親戚2桌"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/sit_title"
                app:layout_constraintTop_toTopOf="@id/sit_title"
                app:layout_constraintRight_toRightOf="@id/bottom_line"
                app:layout_constraintLeft_toLeftOf="@id/bottom_line"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/bottom_line"
                app:layout_constraintTop_toBottomOf="@id/sit"
                app:layout_constraintLeft_toRightOf="@id/sit_title"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="50sp"
                android:background="@color/white"
                android:layout_marginStart="10dp"
                android:layout_width="0dp"
                android:layout_height="3dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            app:layout_constraintTop_toTopOf="@id/content_view"
            android:layout_marginTop="160dp"
            app:layout_constraintLeft_toLeftOf="@id/content_view"
            android:layout_marginStart="250dp"
            android:src="@drawable/confirm_icon"
            android:layout_width="100dp"
            android:layout_height="84dp"/>


        <ImageView
            android:id="@+id/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/logo2"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>


        <TextView
            android:text="貴賓區&lt;女方"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginEnd="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
