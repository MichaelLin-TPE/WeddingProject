<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CFD6CD"
        tools:context=".confirmation_customer.ConfirmationCustomerActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/photo_view"
            android:layout_width="650dp"
            android:layout_height="460dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/dialog_confirm_name_selection_shape"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@id/content_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/photo" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_view"
            android:layout_width="650dp"
            android:layout_height="460dp"
            android:background="@drawable/dialog_confirm_name_selection_shape"
            app:layout_constraintBottom_toTopOf="@id/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photo_view">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:gravity="center"
                android:text="謝謝你來 :)\n名字已送出, 請停留在此畫面, 勿關閉app"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="50dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="KS"
                android:textColor="@color/white"
                android:textSize="80sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line" />

            <TextView
                android:id="@+id/sit_title"
                android:textSize="60sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/sit"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginTop="20dp"
                android:text="座位:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/sit"
                android:textSize="60sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/sit_title"
                app:layout_constraintTop_toTopOf="@id/sit_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/sit_title"
                android:text="A01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                app:layout_constraintTop_toBottomOf="@id/sit"
                app:layout_constraintLeft_toLeftOf="@id/sit"
                app:layout_constraintRight_toRightOf="@id/sit"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="3dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            app:layout_constraintBottom_toTopOf="@id/logo"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="180dp"
            android:src="@drawable/confirm_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo2"
            app:layout_constraintBottom_toBottomOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="160dp"
            android:layout_marginBottom="30dp"
            android:text="貴賓區&lt;女方"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
