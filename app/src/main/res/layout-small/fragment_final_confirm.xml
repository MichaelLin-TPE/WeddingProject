<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".service.confirm_amount.input.InputAmountFragment">

        <ImageView
            android:id="@+id/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/back"
            android:layout_width="30dp"
            android:layout_height="30dp"/>


        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/final_confirm_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/need_cake"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="70dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="要發喜餅"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/center_view"
            android:layout_marginTop="25sp"
            android:background="@drawable/confirm_amount_bg2"
            app:layout_constraintTop_toBottomOf="@id/need_cake"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="357dp"
            android:layout_height="345dp">



            <TextView
                android:id="@+id/amount"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="資料已送出\n待下位賓客選取名字"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>






        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            app:layout_constraintTop_toTopOf="@id/center_view"
            app:layout_constraintRight_toRightOf="@id/center_view"
            android:scaleType="centerCrop"
            android:src="@drawable/final_icon"
            android:layout_width="138dp"
            android:layout_height="107dp"/>



        <ImageView
            android:id="@+id/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/logo2"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>


        <TextView
            android:text="禮金組"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginEnd="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
